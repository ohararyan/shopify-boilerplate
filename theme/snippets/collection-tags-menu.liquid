<div class="btn-group pull-right">
  <a class="btn{% if current_tags %} btn-inverse{% endif %} dropdown-toggle" data-toggle="dropdown" href="#">
      <i class="icon-filter"></i>
      <span class="caret"></span>
    </a>
  <ul class="dropdown-menu">
    {% if current_tags %}<li><a href="./"><em>{% include '__localize' with 'Clear filters' %}</em></a></li>{% endif %}
    {% for t in collection.all_tags %}
    {% if current_tags contains t %}
    <li class="active">{{ t | capitalize | link_to_remove_tag: t }}</li>
    {% else %}
    <li>{{ t | capitalize | link_to_add_tag: t }}</li>
    {% endif %}
    {% endfor %}
  </ul>
</div>